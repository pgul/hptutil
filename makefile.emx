CC       = gcc
DEBUG    = 0

OBJS    = sortarea.o purgearea.o packarea.o linkarea.o hptutil.o
SRC_DIR = ./src/

ifeq ($(DEBUG), 1)
  CFLAGS  = -c -I./h -I.. -Wall -g -O3 -DOS2
  LFLAGS  = -L../smapi -L../fidoconf -g
else
  CFLAGS  = -c -I./h -I.. -Wall -O3 -s -DOS2
  LFLAGS  = -L../smapi -L ../fidoconf -s
endif


all: $(OBJS) \
    hptutil.exe

%.o: $(SRC_DIR)%.c
	$(CC) $(CFLAGS) $(SRC_DIR)$*.c

hptutil.exe: $(OBJS)
	$(CC) $(LFLAGS) -o hptutil.exe $(OBJS) -lfconfemx -lsmapiemx

clean:
	-rm -f *.o
	-rm -f *~
	-rm -f hptutil.exe
	-rm -f core
